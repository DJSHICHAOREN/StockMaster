<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_stock_item"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="5dp"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="5dp"
            android:layout_height="20dp"/>

        <Button
            android:id="@+id/btn_supervise_type"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/colorSuperviseNull"/>

        <View
            android:layout_width="10dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tv_stock_id"
            android:layout_width="60dp"
            android:layout_height="20dp"></TextView>

        <TextView
            android:id="@+id/tv_stock_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="hello"></TextView>




    </LinearLayout>


    <TextView
        android:id="@+id/tv_deal_tip"
        android:layout_width="match_parent"
        android:layout_height="20dp"></TextView>


</LinearLayout>